<?xml version="1.0" encoding="utf-8"?> 
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" 
    android:orientation="vertical"
    android:layout_width="fill_parent" 
    android:layout_height="wrap_content"
    android:descendantFocusability="blocksDescendants"
    android:focusable="false"
    android:clickable="false"
    android:paddingTop="@dimen/list_item_padding"
    android:paddingBottom="@dimen/list_item_padding"
    android:focusableInTouchMode="false"
    android:minHeight="25dp"> 
        
    <RelativeLayout 
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_marginBottom="@dimen/list_item_padding">
        <TextView android:id="@+id/trace_his_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/trace_his_name"
            android:layout_alignParentLeft="true"
            android:focusable="false"
            android:lines="1"
            android:clickable="false"
            android:textSize="@dimen/trace_his_name"/>
        <TextView android:id="@+id/trace_his_pubdate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:textColor="@color/trace_his_time"
            android:lines="1"
            android:focusable="false"
            android:clickable="false"
            android:textSize="@dimen/trace_his_time"/>
      </RelativeLayout>
      
        <TextView android:id="@+id/trace_his_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#FF000000"
            android:layout_weight="4"
            android:focusable="false"
            android:clickable="false"
            android:textSize="15sp"/>
        <com.zhxg.zhxgm.library.ExpandableHeightGridView
            android:id="@+id/trace_his_images"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:horizontalSpacing="15dp"
            android:isScrollContainer="true"
            android:stretchMode="columnWidth"
    		android:verticalSpacing="20dp"
            android:numColumns="3"
            android:padding="0dp"
             />
   
</LinearLayout> 
  