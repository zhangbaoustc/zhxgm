<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"

    tools:context=".MainActivity" >
	<include layout="@layout/game_man_nav_top"/>
    <LinearLayout
        android:id="@+id/game_mgr_ll"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="10"
        android:paddingBottom="@dimen/activity_vertical_margin"
		android:paddingLeft="@dimen/activity_horizontal_margin"
		android:paddingRight="@dimen/activity_horizontal_margin"
		android:paddingTop="@dimen/activity_vertical_margin"
        android:visibility="visible"
        android:orientation="vertical" >
			<RelativeLayout 
			    android:layout_width="match_parent"
			    android:layout_height="45dp">
			    <Button android:id="@+id/game_add"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:layout_toLeftOf="@+id/game_edit"
			        android:text="@string/game_add"/>

			    <Button
			        android:id="@+id/game_edit"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:layout_alignParentTop="true"
			        android:layout_alignParentRight="true"
			        android:text="@string/game_edit" />

			</RelativeLayout>
			
			<LinearLayout 
			    android:layout_width="match_parent"
			    android:layout_height="wrap_content"
			    android:orientation="horizontal" >
			    
			    <TextView android:layout_width="70dp"
			        android:layout_height="wrap_content"
			        android:text="@string/game_name"/>
			    
			    <Spinner android:id="@+id/gameNameSpinner"
			        android:layout_width="match_parent"
			        android:layout_height="wrap_content"/>
			    
			</LinearLayout>
			<LinearLayout 
			    android:layout_width="match_parent"
			    android:layout_height="wrap_content"
			    android:orientation="horizontal"
			    >
			    <TextView android:layout_width="70dp"
			        android:layout_height="wrap_content"
			        android:text="@string/game_type"/>
			    
			    <TextView android:id="@+id/game_type"
			         android:layout_width="70dp"
			        android:layout_height="wrap_content"
			        />
			    
			</LinearLayout>
			<LinearLayout 
			    android:layout_width="match_parent"
			    android:layout_height="wrap_content"
			    android:orientation="horizontal"
			    >
			    <TextView android:layout_width="70dp"
			        android:layout_height="wrap_content"
			        android:text="@string/game_distance"/>
			    
			    <TextView android:id="@+id/game_distance"
			        android:layout_width="match_parent"
			        android:layout_height="wrap_content"/>
			    
			</LinearLayout>
			<LinearLayout 
			    android:layout_width="match_parent"
			    android:layout_height="wrap_content"
			    android:orientation="horizontal"
			    >
			    <TextView android:layout_width="70dp"
			        android:layout_height="wrap_content"
			        android:text="@string/game_bonus"/>
			    
			    <TextView android:id="@+id/game_bonus"
			        android:layout_width="match_parent"
			        android:layout_height="wrap_content"/>
			    
			</LinearLayout>
			<LinearLayout 
			    android:layout_width="match_parent"
			    android:layout_height="wrap_content"
			    android:orientation="horizontal"
			    >
			    <TextView android:layout_width="70dp"
			        android:layout_height="wrap_content"
			        android:text="@string/game_gather_date"/>
			    
			    <TextView android:id="@+id/game_gather_time"
			        android:layout_width="match_parent"
			        android:layout_height="wrap_content"/>
			</LinearLayout>
			
			<LinearLayout 
			    android:layout_width="match_parent"
			    android:layout_height="wrap_content"
			    android:orientation="horizontal"
			    >
			    <TextView android:layout_width="70dp"
			        android:layout_height="wrap_content"
			        android:text="@string/game_gather_place"/>
			    
			    <TextView android:id="@+id/game_gather_place"
			        android:layout_width="match_parent"
			        android:layout_height="wrap_content"/>
			</LinearLayout>
			<LinearLayout 
			    android:layout_width="match_parent"
			    android:layout_height="wrap_content"
			    android:orientation="horizontal"
			    >
			    <TextView android:layout_width="70dp"
			        android:layout_height="wrap_content"
			        android:text="@string/game_fly_date"/>
			    
			    <TextView android:id="@+id/game_fly_date"
			        android:layout_width="match_parent"
			        android:layout_height="wrap_content"/>
			</LinearLayout>
			<LinearLayout 
			    android:layout_width="match_parent"
			    android:layout_height="wrap_content"
			    android:orientation="horizontal"
			    >
			    <TextView android:layout_width="70dp"
			        android:layout_height="wrap_content"
			        android:text="@string/game_fly_place"/>
			    
			    <TextView android:id="@+id/game_fly_place"
			        android:layout_width="match_parent"
			        android:layout_height="wrap_content"/>
			</LinearLayout>
			
			<LinearLayout 
			    android:layout_width="match_parent"
			    android:layout_height="wrap_content"
			    android:orientation="horizontal"
			    >
			    <TextView android:layout_width="70dp"
			        android:layout_height="wrap_content"
			        android:text="@string/game_referee"/>
			    
			    <TextView android:id="@+id/game_referee"
			        android:layout_width="match_parent"
			        android:layout_height="wrap_content"/>
			</LinearLayout>
            
    </LinearLayout>
	<LinearLayout
	    android:id="@+id/game_info_ll"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="10"
                android:paddingBottom="@dimen/activity_vertical_margin"
		android:paddingLeft="@dimen/activity_horizontal_margin"
		android:paddingRight="@dimen/activity_horizontal_margin"
		android:paddingTop="@dimen/activity_vertical_margin"
        android:visibility="gone"
        android:orientation="vertical" >

           <RelativeLayout 
			    android:layout_width="match_parent"
			    android:layout_height="45dp">
			    <Button android:id="@+id/game_info_trace"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:layout_alignParentLeft="true"
			        android:text="@string/game_trace"/>
			</RelativeLayout>
            
           <LinearLayout 
			    android:layout_width="match_parent"
			    android:layout_height="wrap_content"
			    android:orientation="horizontal"
			    >
			    <TextView android:layout_width="70dp"
			        android:layout_height="wrap_content"
			        android:text="@string/game_name"/>
			    
			    <TextView android:id="@+id/game_gather_name"
			        android:layout_width="match_parent"
			        android:layout_height="wrap_content"/>
			</LinearLayout>
			
            <LinearLayout 
			    android:layout_width="match_parent"
			    android:layout_height="wrap_content"
			    android:orientation="horizontal"
			    >
			    <TextView android:layout_width="70dp"
			        android:layout_height="wrap_content"
			        android:text="@string/game_page_num"/>
			    
			    <EditText android:id="@+id/game_gather_num"
			        android:layout_width="match_parent"
			        android:layout_height="wrap_content"/>
			</LinearLayout>
			
            <LinearLayout 
			    android:layout_width="match_parent"
			    android:layout_height="wrap_content"
			    android:orientation="horizontal"
			    >
			    <TextView android:layout_width="70dp"
			        android:layout_height="wrap_content"
			        android:text="@string/game_info_longitude"/>
			    
			    <EditText android:id="@+id/game_gather_longitude"
			        android:layout_width="80dp"
			        android:layout_height="wrap_content"/>
			    
			    <TextView 
			        android:layout_width="70dp"
			        android:layout_height="wrap_content"
			        android:text="@string/game_info_latitude"/>
			    
			    <EditText 
			        android:id="@+id/game_gather_latitude"
			        android:layout_width="80dp"
			        android:layout_height="wrap_content"/>
			    
			    <TextView
			        android:id="@+id/gather_location" 
			        android:layout_weight="2"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:drawableLeft="@drawable/mark"
			        android:text="@string/location"/>
			</LinearLayout>
			
            <LinearLayout 
			    android:layout_width="match_parent"
			    android:layout_height="wrap_content"
			    android:orientation="horizontal"
			    >
			    <TextView android:layout_width="70dp"
			        android:layout_height="wrap_content"
			        android:text="@string/game_info_memo"/>
			    
			    <EditText android:id="@+id/game_gather_memo"
			        android:layout_width="match_parent"
			        android:layout_height="wrap_content"/>
			</LinearLayout>
			
             <LinearLayout 
			    android:layout_width="match_parent"
			    android:layout_height="wrap_content"
			    android:orientation="horizontal"
			    >
			    <Button
                android:id="@+id/game_gather_update_btn"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginTop="16dp"
                android:paddingLeft="32dp"
                android:paddingRight="32dp"
                android:textColor="@color/white"
                android:background="@drawable/blue_button"
                android:text="@string/action_confirm" />
			</LinearLayout>
			
             <RelativeLayout
			    android:layout_width="match_parent"
			    android:layout_height="wrap_content"
			    android:orientation="horizontal"
			    >
			    <Button
                android:id="@+id/game_info_camera"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                 android:layout_alignParentLeft="true"
                android:textColor="@color/white"
                android:background="@drawable/blue_button"
                android:text="@string/action_game_info_camera" />
			    
			    <Button
                android:id="@+id/game_gather_image_upload"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_alignParentRight="true"
                android:textColor="@color/white"
                android:background="@drawable/blue_button"
                android:text="@string/action_game_info_image_upload" />
			</RelativeLayout>
			
    </LinearLayout>
    
    	<LinearLayout
    	    android:id="@+id/game_transport_ll"
	        android:layout_width="fill_parent"
	        android:layout_height="0dp"
	        android:layout_weight="10"
	        android:visibility="gone"
	                android:paddingBottom="@dimen/activity_vertical_margin"
		android:paddingLeft="@dimen/activity_horizontal_margin"
		android:paddingRight="@dimen/activity_horizontal_margin"
		android:paddingTop="@dimen/activity_vertical_margin"
	        android:orientation="vertical" >
			<RelativeLayout
			    android:layout_width="match_parent"
			    android:layout_height="wrap_content"
			    android:orientation="horizontal"
			    >
			    <Button
                android:id="@+id/game_transport_trace"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                 android:layout_alignParentLeft="true"
                android:text="@string/game_trace" />
			    
			    <Button
	                android:id="@+id/game_transport_action_begin"
	                android:layout_width="100dp"
	                android:layout_height="wrap_content"
	                android:layout_gravity="right"
	                android:layout_alignParentRight="true"
	                android:text="@string/action_transport_begin" />
			    
			     <Button
	                android:id="@+id/game_transport_action_end"
	                android:layout_width="100dp"
	                android:layout_height="wrap_content"
	                android:layout_gravity="right"
	                android:layout_alignParentRight="true"
	                android:visibility="gone"
	                android:text="@string/action_transport_end" />
			</RelativeLayout>
           
			<LinearLayout 
			    android:layout_width="match_parent"
			    android:layout_height="wrap_content"
			    android:orientation="horizontal"
			    >
			    <TextView android:layout_width="70dp"
			        android:layout_height="wrap_content"
			        android:text="@string/game_name"/>
			    
			    <TextView 
			        android:id="@+id/game_transport_name"
			        android:layout_width="match_parent"
			        android:layout_height="wrap_content"/>
			</LinearLayout>
			
			<LinearLayout 
			    android:layout_width="match_parent"
			    android:layout_height="wrap_content"
			    android:orientation="horizontal"
			    >
			    <TextView android:layout_width="70dp"
			        android:layout_height="wrap_content"
			        android:text="@string/game_transport_start_location"/>
			    
			    <TextView 
			        android:id="@+id/game_transport_start_point"
			        android:layout_width="match_parent"
			        android:layout_height="wrap_content"/>
			</LinearLayout>
			
			<LinearLayout 
			    android:layout_width="match_parent"
			    android:layout_height="wrap_content"
			    android:orientation="horizontal"
			    >
			    <TextView android:layout_width="70dp"
			        android:layout_height="wrap_content"
			        android:text="@string/game_transport_current_location"/>
			    
			    <TextView
			         android:id="@+id/game_transport_current_point" 
			        android:layout_width="match_parent"
			        android:layout_height="wrap_content"/>
			</LinearLayout>
			
			<LinearLayout 
			    android:layout_width="match_parent"
			    android:layout_height="wrap_content"
			    android:orientation="horizontal"
			    >
			    <TextView android:layout_width="70dp"
			        android:layout_height="wrap_content"
			        android:text="@string/game_distance"/>
			    
			    <TextView
			         android:id="@+id/game_transport_distance" 
			        android:layout_width="match_parent"
			        android:layout_height="wrap_content"/>
			</LinearLayout>
             
              <RelativeLayout
			    android:layout_width="match_parent"
			    android:layout_height="wrap_content"
			    android:orientation="horizontal"
			    >
			    <Button
                android:id="@+id/game_transport_camera"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                 android:layout_alignParentLeft="true"
                android:textColor="@color/white"
                android:background="@drawable/blue_button"
                android:text="@string/action_game_transport_camera" />
			    
			    <Button
                android:id="@+id/game_transport_image_upload"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_alignParentRight="true"
                android:textColor="@color/white"
                android:background="@drawable/blue_button"
                android:text="@string/action_game_info_image_upload" />
			</RelativeLayout>
        </LinearLayout>
    
    	<LinearLayout
	    	android:id="@+id/game_letfly_ll"
	        android:layout_width="fill_parent"
	        android:layout_height="0dp"
	                android:paddingBottom="@dimen/activity_vertical_margin"
		android:paddingLeft="@dimen/activity_horizontal_margin"
		android:paddingRight="@dimen/activity_horizontal_margin"
		android:paddingTop="@dimen/activity_vertical_margin"
	        android:layout_weight="10"
	        android:visibility="gone"
	        android:orientation="vertical" >

            <RelativeLayout 
			    android:layout_width="match_parent"
			    android:layout_height="45dp">
			    <Button 
			        android:id="@+id/game_letfly_trace"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:layout_alignParentLeft="true"
			        android:text="@string/game_trace"/>
			    <Button 
			        android:id="@+id/game_letfly_done"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:layout_alignParentRight="true"
			        android:text="@string/action_letfly_done"/>
			</RelativeLayout>
            
           <LinearLayout 
			    android:layout_width="match_parent"
			    android:layout_height="wrap_content"
			    android:orientation="horizontal"
			    >
			    <TextView android:layout_width="70dp"
			        android:layout_height="wrap_content"
			        android:text="@string/game_name"/>
			    
			    <TextView android:id="@+id/game_letfly_name"
			        android:layout_width="match_parent"
			        android:layout_height="wrap_content"/>
			</LinearLayout>
			
            <LinearLayout 
			    android:layout_width="match_parent"
			    android:layout_height="wrap_content"
			    android:orientation="horizontal"
			    >
			    <TextView android:layout_width="70dp"
			        android:layout_height="wrap_content"
			        android:text="@string/game_letfly_time"/>
			    
			    <TextView android:id="@+id/game_letfly_time"
			        android:layout_width="match_parent"
			        android:layout_height="wrap_content"/>
			</LinearLayout>
			
            <LinearLayout 
			    android:layout_width="match_parent"
			    android:layout_height="wrap_content"
			    android:orientation="horizontal"
			    >
			    <TextView android:layout_width="70dp"
			        android:layout_height="wrap_content"
			        android:text="@string/game_letfly_place"/>
			    
			    <EditText android:id="@+id/game_letfly_place"
			        android:layout_width="match_parent"
			        android:layout_height="wrap_content"/>
			</LinearLayout>
			
            <LinearLayout 
			    android:layout_width="match_parent"
			    android:layout_height="wrap_content"
			    android:orientation="horizontal"
			    >
			    <TextView android:layout_width="70dp"
			        android:layout_height="wrap_content"
			        android:text="@string/game_letfly_longitude"/>
			    
			    <TextView android:id="@+id/game_letfly_longitude"
			        android:layout_width="80dp"
			        android:layout_height="wrap_content"/>
			    
			    <TextView 
			        android:layout_width="70dp"
			        android:layout_height="wrap_content"
			        android:text="@string/game_letfly_latitude"/>
			    
			    <TextView 
			        android:id="@+id/game_letfly_latitude"
			        android:layout_width="80dp"
			        android:layout_height="wrap_content"/>
			    <TextView
			        android:id="@+id/letfly_location"			        
			        android:layout_weight="2"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:drawableLeft="@drawable/mark"
			        android:text="@string/location"/>
			</LinearLayout>
			
            <LinearLayout 
			    android:layout_width="match_parent"
			    android:layout_height="wrap_content"
			    android:orientation="horizontal"
			    >
			    <TextView android:layout_width="70dp"
			        android:layout_height="wrap_content"
			        android:text="@string/game_distance"/>
			    
			    <TextView android:id="@+id/game_letfly_distance"
			        android:layout_width="match_parent"
			        android:layout_height="wrap_content"/>
			</LinearLayout>
			
			
             <RelativeLayout
			    android:layout_width="match_parent"
			    android:layout_height="wrap_content"
			    android:orientation="horizontal"
			    >
			    <Button
                android:id="@+id/game_letfly_camera"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                 android:layout_alignParentLeft="true"
                android:textColor="@color/white"
                android:background="@drawable/blue_button"
                android:text="@string/action_game_info_camera" />
			    
			    <Button
                android:id="@+id/game_letfly_image_upload"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_alignParentRight="true"
                android:textColor="@color/white"
                android:background="@drawable/blue_button"
                android:text="@string/action_game_info_image_upload" />
			</RelativeLayout>
            
    </LinearLayout>
</LinearLayout>